<configs>

	<append xpath="/gamestages">
	
	<!-- CUSTOM SLEEPER GROUPS AND SPAWNERS FOR NON CORE POIS ONLY FOR SPIDERS -->

	<!-- Single Groups -->
	<group name="SpiderPack" spawner="SleeperSpiderPack"/>
	<group name="SpiderPack_Feral" spawner="SleeperSpiderPack_Feral"/>	
	<group name="SpiderPack_Radiated" spawner="SleeperSpiderPack_Radiated"/>	
	<group name="SpiderPack_Mini" spawner="SleeperSpiderPack_Mini"/>
	<group name="SpiderPack_Queen" spawner="SleeperSpiderPack_Queen"/>

	<!-- Mixed Groups -->
	<group name="SpiderPack_EasyMix" spawner="SleeperSpiderPack_EasyMix"/>
	<group name="SpiderPack_Mix" spawner="SleeperSpiderPack_Mix"/>	
	<group name="SpiderPack_HardMix" spawner="SleeperSpiderPack_HardMix"/>

	<!-- Single Spawns -->	
	<spawner name="SleeperSpiderPack">
		<gamestage stage="1">
			<spawn group="SpiderPack" num="1" maxAlive="1" duration="1"/>
		</gamestage>
	</spawner>
	<spawner name="SleeperSpiderPack_Feral">
		<gamestage stage="1">
			<spawn group="SpiderPack_Feral" num="1" maxAlive="1" duration="1"/>
		</gamestage>
	</spawner>
	<spawner name="SleeperSpiderPack_Radiated">
		<gamestage stage="1">
			<spawn group="SpiderPack_Radiated" num="1" maxAlive="1" duration="1"/>
		</gamestage>
	</spawner>
	<spawner name="SleeperSpiderPack_Mini">
		<gamestage stage="1">
			<spawn group="SpiderPack_Mini" num="1" maxAlive="1" duration="1"/>
		</gamestage>
	</spawner>
	<spawner name="SleeperSpiderPack_Queen">
		<gamestage stage="1">
			<spawn group="SpiderPack_Queen" num="1" maxAlive="1" duration="1"/>
		</gamestage>
	</spawner>
	
	<!-- Mixed Spawns -->
	<spawner name="SleeperSpiderPack_EasyMix">
		<gamestage stage="1">
			<spawn group="SpiderPack_EasyMix" num="1" maxAlive="1" duration="1"/>
		</gamestage>
	</spawner>
	<spawner name="SleeperSpiderPack_Mix">
		<gamestage stage="1">
			<spawn group="SpiderPack_Mix" num="1" maxAlive="1" duration="1"/>
		</gamestage>
	</spawner>
	<spawner name="SleeperSpiderPack_HardMix">
		<gamestage stage="1">
			<spawn group="SpiderPack_HardMix" num="1" maxAlive="1" duration="1"/>
		</gamestage>
	</spawner>	
	
	</append>

</configs>